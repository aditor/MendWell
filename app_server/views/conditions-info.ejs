    function formatDate(dateString){
      var date = new Date(dateString);
      var monthNames = [ "January", "February", "March", "April", "May", "June",
      "July", "August", "September", "October", "November", "December" ];
      var d = date.getDate();
      var m = monthNames[date.getMonth()];
      var y = date.getFullYear();
      var output = d + ' ' + m + ' ' + y;
      return output;
    }

// Removind rows
    $("#bigTable button").each(function(idx, butt){
        butt.addEventListener("click", function(e) {
                  var rows = $("#bigTable tr");
                  rows.each(function(idx, row){
                    if($(row).find('button').is(butt)){
                        $(row).remove();
                    }
                  })
               }, false);
    })


    $("#delButton").click(function(e){
      console.log("Delteddd")
      $.ajax({
          url: window.location.href,
          type: 'DELETE',
          success: function(result) {
          }
      });
    });

    $("#updateButton").click(function(e){
      console.log("entered");
      var medArr = [];
      var rows = $("#bigTable tr");
      rows.each(function(idx, row){
        var singleMed = {};
        singleMed.medName = $(row).find('input[name=medName]').val();
        singleMed.medDosage = $(row).find('input[name=medDosage]').val();
        if(Object.keys(singleMed).length > 0){
          medArr.push(singleMed);
        }
      })

      var postData = {};
      postData.name = $('#condName').text().trim();
      postData.medList = medArr;
      postData.severity = $('#severity').text();
      postData.updatedLast = Date.now;
      console.log("POSTDATA" + JSON.stringify(postData) + "");
      $.ajax({
            url: window.location.href,
            type: 'PUT',
            data: JSON.stringify({"symptomList":postData}),
            dataType: 'json',
            contentType: 'application/json'
        }).done(function(data){
          console.log("POST SUCCESS" + data);
        }).fail(function(data){
            console.error("ERROR - Failed:" + data);
        });
    });

  </script>