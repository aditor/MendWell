<!DOCTYPE html>
<html>
  <head>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="../../javascripts/jquery-3.2.1.min.js"></script>
    <script src="/bootstrap/js/bootstrap.min.js"></script>
  </head>

  <body>

    <div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="/"><%= pageHeader.title %></a>
          <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main"><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>
        </div>
        <div class="navbar-collapse collapse" id="navbar-main">
          <ul class="nav navbar-nav">
            <li><a href="/about/">About</a></li>
          </ul>
        </div>
      </div>
    </div>

</html>

  <div class="page-header" id="banner">
    <div class="row">
      <div class="col-lg-6">
        <h1>Recent Days <br><small>&nbsp;Track your medications and wellbeing over the past few days</small></h1>
      </div>
    </div>
  </div>

  <!-- button for editing the LATEST day -->
  <a class="btn btn-success" href="/block/edit">Edit Today</a>

  <div class="row">
    <div class="col-xs-12 col-sm-8">
      <div class="row list-group">
        <% days.forEach(function(singleDay) { %>
        
              <div class="col-xs-12 list-group-item">
                <h4> <a href="/block"><%= singleDay.date %></a> </h4>
                                <table class="table table-striped table-hover ">
                                  <thead>
                                    <tr>
                                      <th class="text-warning">Medication</th>
                                      <th class="text-success">Dosage</th>
                                    </tr>
                                  </thead>
                                  <tbody>
                                    
                                    <% singleDay.medications.forEach(function(eachMed) { %>
                                      <tr>
                                        <td><%= eachMed.medName %></td>
                                        <td><%= eachMed.medDosage %></td>
                                      </tr>
                                    <% }); %>

                                  </tbody>
                                </table>                 
                <h4>Body Status</h4>
                <p>
                  <% singleDay.bodyStatus.forEach(function(eachPart) { %>
                              <span class="label label-warning"><%= eachPart.part %></span>
                              <!-- do something else here with the number or whatever status I want to show for that bodypart    -->
                  <% }); %>
                </p> 
              </div>
       <% }); %>

      </div>
    </div>
  </div>

  <div class="container">
      <footer>
        <div class="row">
          <div class="col-xs-12"><small>&copy; Adi Kamath 2017</small></div>
        </div>
      </footer>
  </div>

  </body>